type User {
    id: ID!
    username: String
    email: String
    password: String
    posts: [Post]
}

type Post {
    id: ID!
    title: String
    body: String
    author: User
}

type Query {
    userById(id: ID!): User
    users: [User]
}

input AddUserRequest {
    username: String!
    email: String!
    password: String!
}

type Mutation {
    addUser(user: AddUserRequest!) : User
}
